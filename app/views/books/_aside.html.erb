<aside class="book-info span3">
  <div class="book-info-cover cover" style=<%="#{controller_name == 'blog' ? 'margin-bottom:10px;' : ''}"%>>
    <%= if controller_name == "blog"
          link_to image_tag(book.cover_url(:big_thumb).to_s), book_path(book)
        else
          link_to image_tag(book.cover_url(:big_thumb).to_s), book.cover_url.to_s, :class => 'fancybox'
        end
    %>
  </div>
    <div class="book-info-data">
    <dl>
    <% if controller_name == "blog" && book %>
      <dd style="margin-bottom:20px">
        <%= link_to book.title, book_path(book), target: "_blanck" %>
      </dd>
    <%end%>
      <% book_team(book).each do |role, people| %>
        <dt><%= role%></dt>
        <dd><%= formatted_list(people.collect{ |p| link_to(p, {controller: "books", action: "search", params: {term: p}} ) }).html_safe %></dd>
      <% end %>
    </dl>
  </div>
</aside>
