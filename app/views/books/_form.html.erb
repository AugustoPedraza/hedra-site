<%= simple_form_for(@book, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :weight %>
    <%= f.input :edition %>
    <%= f.input :pages %>
    <%= f.association :authors, :as => :check_boxes %>
    <%= f.input :binding_type, :collection => BindingType.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
