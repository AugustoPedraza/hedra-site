<h1>Listing books</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Width</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Edition</th>
    <th>Pages</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.description %></td>
    <td><%= book.width %></td>
    <td><%= book.height %></td>
    <td><%= book.weight %></td>
    <td><%= book.edition %></td>
    <td><%= book.pages %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

