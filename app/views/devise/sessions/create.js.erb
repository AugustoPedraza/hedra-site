<% if current_user.nil? %>
  $('.errors').html("Informações de acesso inválidas.")
<% else %>
  $('#sign_up_or_sign_in').html("<%=escape_javascript(render '/checkout/second_step')%>")
<% end %>

<% if @last_order%>
  $("input[name='address[address]']").val('<%= @default_address.address%>')
  $("input[name='address[number]']").val('<%= @default_address.number%>')
  $("input[name='address[city]']").val('<%= @default_address.city%>')
	$("select[name='address[state]']").val('<%= @default_address.state%>')
	$("input[name='address[zip_code]']").val('<%= @default_address.zip_code%>')
	$("input[name='cpf_cnpj'").val('<%= @default_cpf%>')
	$("input[name='telephone']").val('<%= @default_phone%>')
<% end %>
