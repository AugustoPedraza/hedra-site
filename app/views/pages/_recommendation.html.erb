<article class="row">
  <div class="recommendation-item-cover cover span2">
    <%= link_to(image_tag(recommendation.cover_url.to_s), recommendation) %>
  </div>
  <div class="recommendation-item-info span7">
    <h3><%= link_to recommendation.title, recommendation %></h3>
    <h4><%= formatted_list(book_team(recommendation)["Texto"]) rescue "" %></h4>
    <div class="recommendation-item-description">
      <p><%= recommendation.description.html_safe %></p>
    </div>
  </div>
  <div class="recommendation-item-price span3">
    <%= list_price(recommendation) %>
  </div>
</article>
