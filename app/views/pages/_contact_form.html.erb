<%= simple_form_for(:contact_form, :url => send_lead_path, :html => { :class => 'form_horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :full_name %>
      <%= f.input :email %>
      <%= f.input :message_body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Enviar mensagem' %>
  </div>

<% end %>
