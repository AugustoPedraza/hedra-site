<% page_data :title => @tag.name, :type => 'article' %>
<div id="tag">
  <div class="container">
    <%= yield :h1 %>

    <% if @page %>
      <div id="extra">
        <div id="image"><%= image_tag(@page.tag_image.to_s) if @page.tag_image.present? %></div>
        <%= @page.body if @page.body.present? %>
      </div>
    <% end %>

    <div id="tag-list">
      <%= render :partial => 'pages/book', :collection => @books %>
    </div>
  </div>
</div>
