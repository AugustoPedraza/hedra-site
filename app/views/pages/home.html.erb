<div id="recommendations">
  <div class="container">
    <h2>Indicação nossa</h2>
    <% @featured_books.each do |book| %>
      <article class="recommendation-list-item row">
        <div class="recommendation-item-cover span2">
          <%= link_to(image_tag(book.cover_url.to_s), book) %>
        </div>
        <div class="recommendation-item-info span10">
          <h3><%= link_to book.title, book %></h3>
          <h4><%= book_team(book)["Texto"].to_sentence(:two_words_connector => ' e ', :last_word_connector => ' e ') rescue "" %></h4>
          <div class="recommendation-item-description">
            <p><%= book.description.html_safe %></p>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</div>
