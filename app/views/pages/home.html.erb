<div id="features">
  <div class="container">
    <% feature = Book.find(1) %>
    <article class="row">
      <div class="span3">
        <%= link_to(image_tag(feature.cover_url.to_s), feature) %>
      </div>
      <div class="span7">
        <h2><%= link_to feature.title, feature %></h2>
        <h3><%= book_team(feature)["Texto"].to_sentence(:two_words_connector => ' e ', :last_word_connector => ' e ') rescue "" %></h3>
        <p><%= feature.description.html_safe %></p>
      </div>
    </article>
  </div>
</div>

