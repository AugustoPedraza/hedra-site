<div class="blog-post container">
  <div class="row">
    <div class="span12">
      <h5><%= post.published_at.strftime("%d-%m-%Y") %></h5>
      <h2>
        <% if defined?(single_post) %>
          <%= post.title %>
        <% else %>
          <%= link_to post.title, post_page_path(post) %>          
        <% end %>
      </h2>
    </div>
  </div>
  <div class="row">
    <%= render "books/aside", :book => post.book if post.book.present? %>
    <div class="span9">
      <% if defined?(single_post) %>
        <%= simple_format(post.body) %>
      <% else %>
        <%= simple_format(truncate(post.body, :length => 800, :omission => "...&nbsp;"+ link_to("Leia mais", post_page_path(post)) )) %>
      <% end %>
    </div>
  </div>
</div>