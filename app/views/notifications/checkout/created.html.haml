%table{:bgcolor => "#FFFFFF", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "font-family:Arial,sans-serif;text-align:left", :width => "600"}
  %tbody
    %tr
      %td{:valign => "top"}
        %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
          %tbody
            %tr
              %td
    %tr
      %td{:valign => "top"}
        %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
          %tbody
            %tr
              %td{:valign => "top"}
                %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                  %tbody
                    %tr
                      %td{:width => "20"}
                      %td{:valign => "top", :width => "400"}
                        %p{:style => "color:#fff;font-weight:bold;margin:16px 0 6px 0;padding:0;line-height:20px;font-size:18px;text-align:left"}
                        %table{:cellpadding => "0", :cellspacing => "0", :style => "border-top:1px solid #fff;border-bottom:1px solid #fff", :width => "600"}
                          %tbody
                            %tr
                              %td{:valign => "top", :width => "500"}
                                %p= "Olá #{@order.user.name},"
                                %p= "Recebemos o seu pedido com sucesso. O número do pedido é <b>#{@order.id}</b>.".html_safe
                                %h3= "Informações do seu pedido"

                            %tr
                              %td{:height => "10", :width => "300"}
                                %b Item
                              %td{:height => "10", :width => "100"}
                                %b Quantidade
                              %td{:height => "10", :width => "100"}
                                %b Valor
                            - @order.order_items.each do |item|
                              %tr
                                %td{:height => "10", :width => "300"}
                                  = item.book.title
                                %td{:height => "10", :width => "100"}
                                  = item.quantity
                                %td{:height => "10", :width => "100"}
                                  = number_to_currency item.price
                            %tr
                              %td{:valign => "top", :width => "500"}
                                %p O prazo de entrega é de até 10 dias úteis a partir da confirmação do pagamento. A entrega será realizada no endereço abaixo:
                            %tr
                              %td{:valign => "top", :width => "500"}
                                %p
                                  = "#{@order.address.address}, #{@order.address.number} - #{@order.address.district}"
                                  %br
                                  = "CEP: #{@order.address.zip_code} #{@order.address.city} - #{@order.address.state}"
                                %br
                      %td{:width => "20"}
    %tr
      %td
    %tr
      %td
        %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
          %tbody
            %tr
              %td{:bgcolor => "#E9E9E9", :colspan => "3", :height => "20", :width => "600"}
                %p{:style => "font-family:Arial,Helvetica,sans-serif;color:#999999;font-weight:normal;margin:2px 0 5px 0;padding:0;line-height:20px;font-size:11px;text-align:center"}
                  = I18n.t("no_reply")
            %tr
              %td{:width => "20"}
              %td{:valign => "top", :width => "560"}
              %td{:width => "20"}
